<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Sneaker Fleet</title>
    <link rel="stylesheet" href="../styles.css">
  </head>
  <body class="collectionBody">
    <%- include("../partials/nav.ejs", { user }) %>
    <h1>My Sneaker Fleet</h1>
    <ul class="collectionUl">
        <% collections.forEach((collection)=>{ %>
          <a href="/collection/<%= collection._id %>">
            <li class="collectionLi"><%= collection.brand %> 
              <%= collection.bodyStyle %> 
              <%= collection.colorPattern %></li>
          </a>
        <% }) %>
      </ul>
  </body>
</html>
